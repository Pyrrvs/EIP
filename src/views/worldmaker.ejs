<!DOCTYPE html>
<html>
  <head>
    <title>WorldMaker</title>
    <script src="/js/util/jquery-1.8.2.min.js"></script>
    <script src="/js/util/jquery.event.drag-2.2.js"></script>
    <script src="/js/util/jquery.input-validate.js"></script>
    <script src="/js/util/underscore.js"></script>
    <script src="/js/util/backbone-min.js"></script>
    <script src="/js/util/bootstrap/js/bootstrap.min.js"></script>
    <script src="/js/WorldMaker/kGE/src/cocos2d.js" defer></script>
    <script src="/js/WorldMaker/kGE/src/box2d.js" defer></script>
    <link href="/css/worldmaker.css" type="text/css" rel="stylesheet"/>
    <script src="/js/util/require.js" data-main="/js/worldmaker/main.js"></script>
  </head>
  <body>
    <div class="navbar">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="#">AGB / WorldMaker</a>
          <ul class="nav pull-right">
            <li><a id="postWorld" class="brand" href="#">Save</a></li>
          </u>
        </div>
      </div>
    </div>
    <div id="worldmaker">

      <!-- LevelView -->
      <div id="levelView" class="inline-top well well-small">
        <div class="line-top">
          <input id="name" type="text" placeholder="Name"></input>
          <button id="create" class="btn btn-tiny btn-success">create</button>
        </div>
        <div id="levelList" class="accordion"></div>
      </div>
      <!-- !LevelView -->      

      <!-- GameView -->
      <div id="gameView" class="inline-top well well-small">
        <div id="menu" class="line-top top">
          <div class="btn-group" data-toggle="buttons-radio">
            <button id="camera" class="btn btn-small active">Camera</button>
            <button id="entity" class="btn btn-small">Entity</button>
          </div>
          <div class="btn-group pull-right" data-toggle="buttons-radio">
            <button id="play" class="btn btn-small">Play</button>
            <button id="stop" class="btn btn-small active">Stop</button>
            <button id="pause" class="btn btn-small">Pause</button>
          </div>
        </div>
        <div id="canvasView" class="line-top">
        </div>
      </div>
      <!-- !GameView -->

      <!-- MenuView -->
      <div id="tabsView" class="inline-top well well-small">
        <ul id="tabs" class="nav nav-tabs">
          <li><a href="#tab-entity" data-toggle="tab">entity</a></li>
          <li><a href="#tab-classes" data-toggle="tab">classes</a></li>
          <li><a href="#tab-class" data-toggle="tab">class</a></li>
          <li><a href="#tab-models" data-toggle="tab">models</a></li>
          <li><a href="#tab-physics" data-toggle="tab">physic</a></li>
        </ul>
        <div class="tab-content">

          <!-- TabEntity -->
          <div class="tab-pane" id="tab-entity">
            <div class="line-top">
              <input id="id" type="text" placeholder="ID"></input>
            </div>
            <div class="line-top">
              <label>class : </label>
              <div id="class" class="btn-group">
                <button class="btn btn-info btn-tiny">Class</button>
                <button class="btn btn-info btn-tiny dropdown-toggle" data-toggle="dropdown">
                  <span class="caret"></span>
                </button>
                <ul class="dropdown-menu"></ul>
              </div>
            </div>
            <div class="line-top">
              <label>x : </label>
              <input id="position-x" class="entity-member" type="number" step="5"></input>
              <label>y : </label>
              <input id="position-y" class="entity-member" type="number" step="5"></input>
            </div>
            <div class="line-top">
              <label>rotation : </label>
              <input id="rotation"  class="entity-member" type="number" step="5"></input>
              <label>scale : </label>
              <input id="scale" class="entity-member" type="number" step="0.1"></input>
            </div>
            <div class="line-top">
              <label>type : </label>
              <div id="body-type" class="btn-group" data-toggle="buttons-radio">
                <button data-type="2" class="btn btn-tiny btn-info active">dynamic</button>
                <button data-type="0" class="btn btn-tiny btn-info">static</button>
                <button data-type="1" class="btn btn-tiny btn-info">kinematic</button>
              </div>
            </div>
          </div>
          <!-- !TabEntity -->

          <div class="tab-pane" id="tab-classes">
            <div class="line-top">
              <input id="name" type="text" placeholder="Name"></input>
              <button id="create" class="btn label btn-success">create</button>
            </div>
            <div id="groupsList" class="accordion"></div>
          </div>

          <div class="tab-pane" id="tab-class">
            <div class="line-top">
              <input id="name" type="text" placeholder="Name"></input>
              <button id="reset" class="btn label btn-success">reset</button>
            </div>
            <div class="line-top">
              <div id="group" class="dropdown">
                <button class="btn btn-info label dropdown-toggle" role="button" data-toggle="dropdown">
                  <span>group</span>
                  <b class="caret"></b>
                </button>
                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel"></ul>
              </div>
            </div>
            <div class="line-top pull-right">
              <button id="new" class="btn label btn-success">edit</button>
              <button id="new" class="btn label btn-success">create</button>
            </div>
          </div>

          <div class="tab-pane" id="tab-models">
            <ul class="media-grid"></ul>
          </div>

          <div class="tab-pane" id="tab-physics">
          </div>

        </div>
      </div>
      <!-- MenuView -->

    </div>
  </body>
</html>
