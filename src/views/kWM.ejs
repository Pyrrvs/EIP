<!DOCTYPE html>
<html>
  <head>
    <title>KSpriteMaker</title>
    <script src="/js/util/jquery-1.8.2.min.js"></script>
    <script src="/js/util/bootstrap/js/bootstrap.min.js"></script>
    <script src="/js/util/underscore.js"></script>
    <script src="/js/WorldMaker/kGE/src/cocos2d.js" defer></script>
    <script src="/js/WorldMaker/kGE/src/box2d.js" defer></script>
    <link href="/css/kWM.css" type="text/css" rel="stylesheet"/>
    <script src="/js/util/require.js" data-main="/js/WorldMaker/main.js"></script>
  </head>
  <body>

    <div class="navbar">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="#">kGameEngine / kWorldMaker</a>
        </div>
      </div>
    </div>
    <div id="kWM">
      <div id="levelView" class="inline-top well well-small">
        <div class="line-top">
          <input id="name" type="text" placeholder="Name"></input>
          <button id="new" class="btn label btn-success">create</button>
        </div>
        <div id="levelList" class="accordion"></div>
      </div>

      <div id="gameView" class="inline-top well well-small">
        <div id="canvasView">
        </div>
      </div>

      <div id="menuView" class="inline-top well well-small">
        <ul id="tabs" class="nav nav-tabs">
          <li><a href="#tab-classes" class="label label-info" data-toggle="tab">classes</a></li>
          <li><a href="#tab-class" class="label label-info" data-toggle="tab">class</a></li>
          <li><a href="#tab-entity" class="label label-info" data-toggle="tab">entity</a></li>
          <li><a href="#tab-models" class="label label-info" data-toggle="tab">models</a></li>
          <li><a href="#tab-physics" class="label label-info" data-toggle="tab">physic</a></li>
        </ul>
        <div class="tab-content">

          <div class="tab-pane" id="tab-classes">
            <div class="line-top">
              <input id="name" type="text" placeholder="Name"></input>
              <button id="create" class="btn label btn-success">create</button>
            </div>
            <div id="groupsList" class="accordion"></div>
          </div>

          <div class="tab-pane" id="tab-class">
            <div class="line-top">
              <input id="name" type="text" placeholder="Name"></input>
              <button id="reset" class="btn label btn-success">reset</button>
            </div>
            <div class="line-top">
              <div id="group" class="dropdown">
                <button class="btn btn-info label dropdown-toggle" role="button" data-toggle="dropdown">
                  <span>group</span>
                  <b class="caret"></b>
                </button>
                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel"></ul>
              </div>
            </div>
            <div class="line-top pull-right">
              <button id="new" class="btn label btn-success">edit</button>
              <button id="new" class="btn label btn-success">create</button>
            </div>
          </div>

          <div class="tab-pane" id="tab-entity">
            <div class="line-top">
              <input id="name" type="text" placeholder="Name"></input>
              <div id="class" class="btn-group">
                <button class="btn btn-info btn-tiny">Class</button>
                <button class="btn btn-info btn-tiny dropdown-toggle" data-toggle="dropdown">
                  <span class="caret"></span>
                </button>
                <ul class="dropdown-menu"></ul>
              </div>
            </div>
            <div class="line-top">
              <label>x : </label>
              <input id="position-x" type="number" step="5"></input>
              <label>y : </label>
              <input id="position-y" type="number" step="5"></input>
              <label>scale : </label>
              <input id="scale" type="number" step="0.1"></input>
            </div>
            <div class="line-top">
              <label>rotation : </label>
              <input id="rotation" type="number" step="5"></input>
            </div>
            <div class="line-top">
              <button id="save" class="btn btn-tiny btn-success pull-right">save</button>
            </div>
          </div>

          <div class="tab-pane" id="tab-models">
            <ul class="media-grid"></ul>
          </div>

          <div class="tab-pane" id="tab-physics">
          </div>

        </div>
      </div>
    </div>

  </body>
</html>
