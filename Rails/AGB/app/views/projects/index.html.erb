<h1>Listing projects</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Privacy</th>
    <th>Nb stars</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.name %></td>
    <td><%= project.description %></td>
    <td><%= project.privacy %></td>
    <td><%= project.nb_stars %></td>
    <td><%= link_to 'Show', [project.user, project] %></td>
    <td><%= link_to 'Edit', edit_user_project_path(project.user, project) %></td>
    <td><%= link_to 'Destroy', [project.user, project], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

